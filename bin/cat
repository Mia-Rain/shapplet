#!/bin/sh
print() {
  out="$(while read -r p; do
    IFS=""; echo "$p"
  done <&0)"
  IFS=""
}
case "$#" in
  0)
    print; [ -n "$out" ] || { LANG=C; print; }
    echo "$out"
    ;;
  *)
    for i in "$@"; do
      [ -e "$i" ] && { print < "$i"; } || { echo "$i is missing or not a file..."; }
      [ -n "$out" ] || { LANG=C; print < "$i"; }
      echo "$out"
    done
  ;;
esac
