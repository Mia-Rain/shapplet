#!/bin/sh
LANG=C
print() {
  [ ! -t "1" ] && {
    out="$(while read -r p; do
      IFS=""; echo "$p"
    done <&0)"
    IFS=""; echo "$out"; true
  } || { 
    while read -r p; do
      IFS=""; echo "$p"
    done <&0
  }
  # extra long but reponds faster when stdout is terminal
}
case "$#" in
  0)
    print;;
  *)
    for i in "$@"; do
      [ -e "$i" ] && { print < "$i"; } || { echo "$i is missing or not a file..."; }
    done
  ;;
esac
