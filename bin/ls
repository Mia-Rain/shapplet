#!/bin/sh
loop(){
  echo "$(for i in $1; do
    IFS=
    printf "%s\\n" $i
  done)"
}
case "$#" in
  0)
    loop "./.* ./*";;
  *)
    for i in "$@"; do
      [ -e "$i" ] && {
        [ -f "$i" ] && { loop "$i"; } || { [ -d "$i" ] && { n="1"; loop "${i%/}/.* ${i%/}/*"; }; }
      } || { echo "$i could not be found.."; exit 1; }
    done
  ;;
esac
